<hr class="border-t border-slate-300 my-6" />

  <script>
    newFunction();

    function newFunction() {
      const statusText = document.querySelector(".texto-gen") as HTMLElement;
      const phrases = [
        "Everything is working",
        "Fetching Gifs...",
        "React Component",
        "Learning in progress",
      ];
      let index = 0;
      let isDeleting = false;
      let phraseIndex = 0;

      function typeEffect() {
        const currentPhrase = phrases[phraseIndex];
        if (!isDeleting && index < currentPhrase.length) {
          statusText.textContent = currentPhrase.substring(0, index + 1) + "|";
          index++;
          setTimeout(typeEffect, 100);
        } else if (isDeleting && index > 0) {
          statusText.textContent = currentPhrase.substring(0, index - 1) + "|";
          index--;
          setTimeout(typeEffect, 100);
        } else {
          isDeleting = !isDeleting;
          if (!isDeleting) {
            phraseIndex = (phraseIndex + 1) % phrases.length;
          }
          setTimeout(typeEffect, 1000);
        }
      }

      typeEffect();
    }
  </script>
